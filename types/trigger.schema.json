{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "type": "object",
    "properties": {
        "event": {
            "description": "The event to run when the conditions for this trigger are met",
            "$ref": "https://raw.githubusercontent.com/bernie-g/minecraft-add-on-schemas/master/constants/events.schema.json"
        },
        "target": {
            "description": "The target of the event",
            "default": "self",
            "$ref": "https://raw.githubusercontent.com/bernie-g/minecraft-add-on-schemas/master/constants/targets.schema.json"
        },
        "filters": {
            "description": "The list of conditions for this trigger",
            "$ref": "https://raw.githubusercontent.com/bernie-g/minecraft-add-on-schemas/master/types/filters.schema.json"
        }
    }
}