{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "type": "object",
    "title": "Server Entity",
    "description": "Behavior pack entity definition",
    "definitions": {
        "components": {
            "allOf": [
                { "$ref": "https://raw.githubusercontent.com/bernie-g/minecraft-add-on-schemas/master/entities/ai_goals.schema.json" },
                { "$ref": "https://raw.githubusercontent.com/bernie-g/minecraft-add-on-schemas/master/entities/attributes.schema.json" },
                { "$ref": "https://raw.githubusercontent.com/bernie-g/minecraft-add-on-schemas/master/entities/components.schema.json" },
                { "$ref": "https://raw.githubusercontent.com/bernie-g/minecraft-add-on-schemas/master/entities/properties.schema.json" }
            ]
        }
    },
    "properties": {
        "format_version": {
            "type": "string",
            "default": "1.14.0"
        },
        "minecraft:entity": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "object",
                    "properties": {
                        "identifier": {
                            "type": "string",
                            "description": "ID used to reference and summon entity"
                        },
                        "is_spawnable": {
                            "type": "boolean",
                            "default": true
                        },
                        "is_summonable": {
                            "type": "boolean",
                            "default": true
                        },
                        "is_experimental": {
                            "type": "boolean",
                            "default": false
                        }
                    },
                    "default": {
                        "identifier": "",
                        "is_spawnable": true,
                        "is_summonable": true,
                        "is_experimental": false
                    }
                },
                "component_groups": {
                    "type": "object",
                    "default": {},
                    "patternProperties": {
                        "^.*$": {
                            "$ref": "#/definitions/components"
                        }
                    },
                    "additionalProperties": false
                },
                "components": {
                    "$ref": "#/definitions/components"
                },
                "events": {
                    "type": "object",
                    "allOf": [
                        { "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/entities/built-in_events.schema.json" },
                        {
                            "patternProperties": {
                                "^.*$": {
                                    "$ref": "https://raw.githubusercontent.com/BlueFrog130/minecraft-add-on-schemas/master/types/event.schema.json"
                                }
                            },
                            "additionalProperties": false,
                            "default": {}
                        }
                    ]
                }
            }
        }
    },
    "required": ["minecraft:entity"]
}
